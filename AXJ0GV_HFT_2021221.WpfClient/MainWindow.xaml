<Window x:Class="AXJ0GV_HFT_2021221.WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AXJ0GV_HFT_2021221.WpfClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400" Background ="SandyBrown">
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>
    <UniformGrid Rows="4" Margin="20">
        <Button Command="{Binding OpenOwnersWindow}" FontSize="20" Padding="5" Background="Bisque">Owners</Button>
        <Button Command="{Binding OpenDogsWindow}" FontSize="20" Padding="5" Background="BurlyWood">Dogs</Button>
        <Button Command="{Binding OpenInjectionsWindow}" FontSize="20" Padding="5" Background="Chocolate">Injections</Button>
        <Button Command="{Binding OpenNonCrudWindow}" FontSize="20" Padding="5" Background="SaddleBrown">NON-CRUD</Button>
    </UniformGrid>
</Window>
